{
  "compilerOptions": {                    
    "target": "ES2022",                                
    "module": "ES2022",     
	"moduleResolution": "node16",                      
    "outDir": "build",                              
    "rootDir": "./src",                   
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
	"types": ["@types/node"]     
  }
}
